{
  "name": "screenshot-mcp",
  "version": "1.0.0",
  "description": "MCP server that provides screenshot functionality using winshot.sh",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --target=bun --outdir=dist",
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "@modelcontextprotocol/sdk"
  ]
}